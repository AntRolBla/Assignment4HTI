<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/timeslots_recycler_row_timeslot_textview"
        android:text="09:00 - 11:00"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/timeslots_recycler_row_day_night_imageview"
        android:layout_gravity="center"
        android:src="@drawable/sun_image"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/timeslots_recycler_row_delete_imageview"
        android:clickable="true"
        android:src="@drawable/delete_image"
        android:layout_gravity="center"/>

</LinearLayout>