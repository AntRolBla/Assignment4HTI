<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="64dp">

    <android.support.v7.widget.RecyclerView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/fragment_viewweekly_day_timeslots_recycler"
        android:scrollbars="vertical"
        android:layout_marginBottom="25dp">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <TextView
            android:id="@+id/fragment_viewweekly_day_days_left_textview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="2x"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/sun_image"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/fragment_viewweekly_day_nights_left_textview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="3x"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/moon_image"/>
    </LinearLayout>

</LinearLayout>