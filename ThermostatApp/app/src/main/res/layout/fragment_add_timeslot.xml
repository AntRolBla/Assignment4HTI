<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="64dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Week Day: "
        android:textSize="28dp"
        android:gravity="center"
        android:id="@+id/fragment_add_timeslot_week_day_textview"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start time"
        android:textSize="26dp"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_add_timeslot_start_time_edittext"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:focusable="false"
        android:longClickable="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End time"
        android:textSize="26dp"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_add_timeslot_end_time_edittext"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:focusable="false"
        android:longClickable="false"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="25dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_add_timeslot_sun_left_textview"
            android:textSize="30dp"
            android:text="3x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sun_image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save"
        style="@style/AppButton.Primary"
        android:id="@+id/fragment_add_timeslot_save_button"/>
</LinearLayout>